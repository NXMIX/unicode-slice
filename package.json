{
  "version": "0.1.0-development",
  "name": "unicode-slice",
  "description": "Slice a unicode string by it's visual width",
  "main": "dist/index.js",
  "typings": "dist/types/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/NXMIX/unicode-slice.git"
  },
  "files": [
    "dist"
  ],
  "author": "jacobbubu <rong.shen@gmail.com>",
  "scripts": {
    "lint": "tslint -p tsconfig.json -t codeFrame 'src/**/*.ts'",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node-dev tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg",
    "prepush": "npm run test:prod && npm run build",
    "travis-deploy-once": "travis-deploy-once"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-push": "npm run prepush",
      "commit-msg": "npm run commitmsg"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/coverage/",
      "/dist/",
      "/tools/",
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true
  },
  "license": "MIT",
  "keywords": [],
  "devDependencies": {
    "@types/ansi-styles": "^3.2.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.12",
    "chalk": "^2.4.2",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.7",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.24",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.43",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.4",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "@nxmix/emoji-seq-match": "^1.0.0",
    "ansi-styles": "^4.1.0"
  }
}
